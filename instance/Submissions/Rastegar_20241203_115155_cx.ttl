@prefix RDFS: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix cx: <http://example.org/cx/> .
@prefix lg: <https://bdlweb.phil.uni-erlangen.de/RCxn/ontologies/lg#> .
@prefix membr: <http://example.org/users#> .
@prefix olia: <http://purl.org/olia/olia.owl#> .
@prefix oliatop: <http://purl.org/olia/olia-top.owl#> .
@prefix rcxn: <https://bdlweb.phil.uni-erlangen.de/RCxn/ontologies/rcxn#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

cx:Idiomaticconstructions a rcxn:Construction ;
    rcxn:hasTitle "Burn one's bridges construction" ;
    rcxn:hasConstructionMeaning cx:Idiomaticconstructions_Meaning ;
    cx:hasExample cx:Idiomaticconstructions_Ex_A,
        cx:Idiomaticconstructions_Ex_B ;
    rcxn:hasMetadata cx:Idiomaticconstructions_MD ;
    rcxn:hasSlots cx:Idiomaticconstructions_slots ;
    lg:partOfLanguage lg:eng .

cx:Idiomaticconstructions_1 a rcxn:SlotMandatory ;
    cx:WordOrder "Initial position" ;
    rcxn:hasSlotForm cx:Idiomaticconstructions_1_Form ;
    rcxn:hasSyntacticFunction "Subject" ;
    cx:hasIndex cx:Idiomaticconstructions_1_Index ;
    rcxn:hasSemanticRole oliatop:ActorMacroRole .

cx:Idiomaticconstructions_1_Form a rcxn:SlotForm ;
    cx:hasSyntacticForm cx:eng_Pronoun .

cx:Idiomaticconstructions_1_Index a cx:Individual ;
    cx:hasAnimacy cx:animate .

cx:Idiomaticconstructions_2 a rcxn:SlotMandatory ;
    cx:WordOrder "Follows subject, precedes object" ;
    rcxn:hasSlotForm cx:Idiomaticconstructions_2_Form ;
    cx:hasIndex cx:Idiomaticconstructions_2_Index .

cx:Idiomaticconstructions_2_Form a rcxn:SlotForm ;
    cx:hasSyntacticForm cx:eng_VerbPhrase ;
    rcxn:hasStem "burn" .

cx:Idiomaticconstructions_2_Index a cx:Event ;
    cx:hasMode olia:IndicativeVerb ;
    cx:hasVoice cx:active .

cx:Idiomaticconstructions_3 a rcxn:SlotMandatory ;
    cx:WordOrder "Precedes \"bridges\"" ;
    rcxn:hasSlotForm cx:Idiomaticconstructions_3_Form ;
    rcxn:hasSyntacticFunction "Determiner/Possessive modifier" ;
    cx:hasIndex cx:Idiomaticconstructions_3_Index ;
    rcxn:hasSemanticRole oliatop:PossessorRole .

cx:Idiomaticconstructions_3_Form a rcxn:SlotForm ;
    cx:hasSyntacticForm cx:eng_PossessivePronoun .

cx:Idiomaticconstructions_3_Index a cx:Individual ;
    cx:hasAnimacy cx:animate .

cx:Idiomaticconstructions_4 a rcxn:SlotMandatory ;
    cx:WordOrder "Final position" ;
    rcxn:hasSlotForm cx:Idiomaticconstructions_4_Form ;
    cx:hasIndex cx:Idiomaticconstructions_4_Index ;
    rcxn:hasSemanticRole oliatop:ThemeRole .

cx:Idiomaticconstructions_4_Form a rcxn:SlotForm ;
    cx:hasSyntacticForm cx:eng_NounPhrase ;
    cx:hasCaseFeature olia:AccusativeCase ;
    rcxn:hasStem "bridge" ;
    rcxn:hasSurfaceForm "bridges" .

cx:Idiomaticconstructions_4_Index a cx:Individual ;
    cx:hasAnimacy cx:inanimate ;
    olia:hasNumber olia:Paucal .

cx:Idiomaticconstructions_Ex_A a cx:Example ;
    cx:hasText "He had burned his bridges in Hollywood and took off for the seclusion of Taos to hide away..." .

cx:Idiomaticconstructions_Ex_B a cx:Example ;
    cx:hasText "I had, quite deliberately, burned my bridges -- there was no returning to the closet for me." .

cx:Idiomaticconstructions_MD a rcxn:Metadata ;
    rcxn:annotator membr:Rastegar ;
    rcxn:creationDate "2024-12-03"^^xsd:date .

cx:Idiomaticconstructions_Meaning a rcxn:ConstructionMeaning ;
    rcxn:hasMeaning "to end relationships" ,
     "to commit oneself to a course from which there is no retreat" .

cx:Idiomaticconstructions_slots a rdf:Seq ;
    rdf:_1 cx:Idiomaticconstructions_1 ;
    rdf:_2 cx:Idiomaticconstructions_2 ;
    rdf:_3 cx:Idiomaticconstructions_3 ;
    rdf:_4 cx:Idiomaticconstructions_4 .

cx:eng_Pronoun a rcxn:Construction ;
    rcxn:hasTitle "Pronoun" ;
    lg:partOfLanguage lg:eng .

cx:eng_VerbPhrase a rcxn:Construction ;
    rcxn:hasTitle "Verb Phrase" ;
    lg:partOfLanguage lg:eng .

cx:eng_PossessivePronoun a rcxn:Construction ;
    rcxn:hasTitle "Possessive Pronoun" ;
    lg:partOfLanguage lg:eng .